
<%= form_tag('/session', method: :post) do %>

    <div class="form-group">
      <label for="name">Username</label>
      <input type="name" class="form-control" id="name" name="user[name]" placeholder="Enter username">
    </div>
    
    <div class="form-group">
      <label for="password">Password</label>
      <input type="password" class="form-control" id="password" name="user[password]" placeholder="Password">
      <small id="passwordHelp" class="form-text text-muted">Must be between 6-20 characters long.</small>
    </div>
      <%= submit_tag("Login") %>
    
    <% end %>